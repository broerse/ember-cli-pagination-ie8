<div class="container-fluid">
	<div class="row">
	  <!-- blog post listing -->
		<div class="col-xs-5">
		  {{input type="text" value=query placeholder="Filter Posts" autofocus="autofocus"}}
			<table class='table'>
				<thead>
					<tr><th>Recent Posts</th></tr>
				</thead>
				<tbody>
				{{#each pagedContent as |post|}}
				<tr><td>
					{{post.title}}
				</td></tr>
				{{/each}}
				</tbody>
			</table>
			{{page-numbers content=pagedContent}}
		</div>
	</div>
</div>